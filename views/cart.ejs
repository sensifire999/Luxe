<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <title>Luxe Cart | Your Selection</title>
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; -webkit-tap-highlight-color: transparent; }
        .glass-card { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); }
        .checkout-gradient { background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%); }
        .item-row { animation: slideUp 0.4s ease-out forwards; }
        @keyframes slideUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body class="bg-[#F1F5F9] text-slate-900 pb-44">

    <div class="max-w-md mx-auto px-6 pt-12">
        <div class="flex items-end justify-between mb-10">
            <div>
                <p class="text-[10px] font-black text-blue-600 uppercase tracking-[4px] mb-1">Your Selection</p>
                <h1 class="text-4xl font-black italic uppercase tracking-tighter leading-none">Luxe <span class="text-slate-400">Bag</span></h1>
            </div>
            <div class="flex flex-col items-end">
                <span class="text-[10px] font-black text-slate-400 mb-1 uppercase tracking-widest">Inventory</span>
                <span class="bg-white px-4 py-1.5 rounded-full text-xs font-black shadow-sm border border-slate-100"><%= items.length %> ITEMS</span>
            </div>
        </div>

        <div class="space-y-5">
            <% if(items && items.length > 0) { %>
                <% items.forEach((item, index) => { %>
                    <div class="item-row glass-card p-5 rounded-[2.5rem] border border-white shadow-xl shadow-slate-200/50 flex items-center gap-5 relative group overflow-hidden">
                        <div class="w-24 h-24 bg-slate-100 rounded-[1.8rem] overflow-hidden shrink-0 shadow-inner">
                            <% if (Array.isArray(item.images) && item.images.length > 0) { %>
                                <img src="<%= item.images[0] %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            <% } else { %>
                                <img src="<%= item.image %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            <% } %>
                        </div>
                        
                        <div class="flex-grow">
                            <h3 class="font-black text-sm uppercase italic leading-tight mb-1 truncate w-32"><%= item.name %></h3>
                            <div class="flex items-center gap-2 mb-3">
                                <span class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></span>
                                <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Authentic Luxe</span>
                            </div>
                            <p class="text-slate-900 font-black italic text-xl">â‚¹<%= item.price %></p>
                        </div>

                        <button onclick="removeFromCart('<%= index %>')" class="w-12 h-12 bg-red-50 text-red-500 rounded-2xl flex items-center justify-center active:bg-red-500 active:text-white transition-all shadow-sm border border-red-100">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                        </button>
                    </div>
                <% }) %>

                <div class="mt-14 checkout-gradient rounded-[3.5rem] p-10 text-white shadow-2xl shadow-blue-900/20 relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-blue-500/10 rounded-full blur-3xl"></div>
                    
                    <div class="space-y-4 mb-8 border-b border-white/5 pb-8">
                        <div class="flex justify-between text-[10px] font-black text-slate-400 uppercase tracking-[3px]">
                            <span>Merchandise</span>
                            <span class="text-white">â‚¹<%= items.reduce((acc, i) => acc + parseInt(i.price), 0) %></span>
                        </div>
                        <div class="flex justify-between text-[10px] font-black text-slate-400 uppercase tracking-[3px]">
                            <span>Shipping</span>
                            <span class="text-emerald-400 italic">COMPLIMENTARY</span>
                        </div>
                    </div>

                    <div class="flex justify-between items-center mb-10">
                        <span class="font-black uppercase italic text-lg tracking-tighter">Total Payable</span>
                        <div class="text-right">
                            <span class="block text-[10px] font-black text-blue-400 uppercase tracking-widest">Incl. Taxes</span>
                            <span class="text-4xl font-black italic tracking-tighter">â‚¹<%= items.reduce((acc, i) => acc + parseInt(i.price), 0) %></span>
                        </div>
                    </div>

                    <a href="/checkout" class="block w-full bg-blue-600 hover:bg-blue-500 py-6 rounded-[2.2rem] text-center font-black uppercase text-[11px] tracking-[0.4em] shadow-xl shadow-blue-600/30 active:scale-95 transition-all">
                        Secure Checkout
                    </a>
                </div>

            <% } else { %>
                <div class="text-center py-20">
                    <div class="w-48 h-48 bg-white rounded-[3rem] flex items-center justify-center mx-auto mb-10 shadow-2xl shadow-slate-200 rotate-3">
                        <span class="text-7xl">ðŸ›’</span>
                    </div>
                    <h2 class="text-3xl font-black italic uppercase tracking-tighter">Cart is Void</h2>
                    <p class="text-slate-400 text-[10px] font-bold uppercase tracking-[4px] mt-4 mb-12 leading-relaxed">Your luxury journey starts with <br>a single selection.</p>
                    <a href="/" class="inline-block bg-slate-900 text-white px-12 py-5 rounded-[2rem] font-black uppercase text-[10px] tracking-[0.3em] shadow-2xl active:scale-95 transition-all">Go Shopping</a>
                </div>
            <% } %>
        </div>
    </div>

    <div class="fixed bottom-8 left-1/2 -translate-x-1/2 w-[85%] bg-white/70 backdrop-blur-2xl border border-white px-8 py-5 flex justify-between items-center z-50 rounded-[2.5rem] shadow-2xl shadow-slate-300">
        <a href="/" class="text-slate-400 hover:text-blue-600 transition-colors"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/></svg></a>
        <a href="/cart" class="text-blue-600 scale-110">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
        </a>
        <a href="/profile" class="text-slate-400 hover:text-blue-600 transition-colors"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M16 7a4 4 0 11-8 0v4M12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg></a>
    </div>

    <script>
    function removeFromCart(index) {
        // Simple confirmation before removing
        if(!confirm('Bhai, item hatana hai?')) return;

        fetch('/remove-item', { // server.js mein yahi route hai
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ index: index })
        })
        .then(res => res.json())
        .then(data => {
            if(data.success) {
                location.reload();
            } else {
                alert('Galti ho gayi!');
            }
        });
    }
    </script>
</body>
</html>

