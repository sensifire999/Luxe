<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>LuxeStore | Premium Shop</title>
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; -webkit-tap-highlight-color: transparent; }
        .glass { background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(12px); }
        .no-scrollbar::-webkit-scrollbar { display: none; }
    </style>
</head>
<body class="bg-[#F8FAFC] text-slate-900 pb-40">

    <nav class="fixed top-0 w-full z-50 glass border-b border-slate-100/50 px-6 py-4 flex justify-between items-center shadow-sm">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-blue-200">
                <span class="text-white font-black text-xs italic">L</span>
            </div>
            <h1 class="text-xl font-black tracking-tighter uppercase">Luxe<span class="text-blue-600">Store</span></h1>
        </div>
        
        <div class="flex items-center gap-3">
            <a href="/profile" class="w-10 h-10 rounded-full border-2 border-white shadow-sm overflow-hidden bg-slate-200">
                <img src="https://ui-avatars.com/api/?name=User&background=0D8ABC&color=fff" alt="Profile">
            </a>
        </div>
    </nav>

    <main class="pt-24 px-5 max-w-md mx-auto">
        
        <form action="/search" method="GET" class="mb-8">
            <div class="relative">
                <input type="text" name="q" placeholder="Search premium items..." 
                       class="w-full bg-white border border-slate-100 p-4 pl-12 rounded-[1.5rem] shadow-sm outline-none focus:ring-4 focus:ring-blue-50 transition-all">
                <svg class="absolute left-4 top-4 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
            </div>
        </form>

        <div class="relative bg-slate-900 rounded-[2.5rem] p-8 text-white mb-10 overflow-hidden shadow-2xl">
            <div class="relative z-10">
                <span class="bg-blue-600 px-3 py-1 rounded-full text-[10px] font-black uppercase">New Drop</span>
                <h2 class="text-3xl font-black mt-4 leading-tight italic">Premium <br>Collection.</h2>
                <button class="inline-block mt-6 bg-white text-black px-8 py-3 rounded-2xl font-extrabold text-[11px] uppercase italic">Explore All</button>
            </div>
            <div class="absolute -right-10 -bottom-10 w-44 h-44 bg-blue-600 rounded-full blur-[80px] opacity-40"></div>
        </div>

        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-black text-slate-900 uppercase italic">Trending Now ðŸ”¥</h3>
        </div>

        <div class="grid grid-cols-2 gap-5">
            <% if(products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="group bg-white p-3 rounded-[2.2rem] shadow-sm border border-slate-100/50 block">
                        <a href="/product/<%= product.id %>" class="relative bg-slate-50 rounded-[1.8rem] overflow-hidden aspect-[4/5] mb-4 block">
                            <% if (Array.isArray(product.images) && product.images.length > 0) { %>
                                <img src="<%= product.images[0] %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <img src="<%= product.image %>" class="w-full h-full object-cover">
                            <% } %>
                        </a>
                        <div class="px-2">
                            <h4 class="text-[10px] font-extrabold text-slate-400 uppercase mb-1">Luxe Edition</h4>
                            <h4 class="text-sm font-black text-slate-900 truncate mb-2 uppercase italic text-ellipsis overflow-hidden"><%= product.name %></h4>
                            <div class="flex items-center justify-between">
                                <p class="text-blue-600 font-black text-lg italic">â‚¹<%= product.price %></p>
                                <button onclick="addToCart('<%= product.id %>')" class="w-10 h-10 bg-slate-900 rounded-xl flex items-center justify-center text-white active:scale-90 transition-all">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path></svg>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-2 text-center py-10 bg-white rounded-3xl border-2 border-dashed border-slate-100">
                    <p class="text-slate-400 font-black text-xs uppercase italic">No Products Found</p>
                </div>
            <% } %>
        </div>
    </main>

    <div class="fixed bottom-6 left-1/2 -translate-x-1/2 w-[94%] max-w-md glass border border-white/50 px-2 py-4 flex justify-around items-center z-50 rounded-[2.5rem] shadow-2xl">
        <a href="/" class="flex flex-col items-center gap-1 text-blue-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/></svg>
            <span class="text-[8px] font-black uppercase italic">Home</span>
        </a>
        <a href="/my-orders" class="flex flex-col items-center gap-1 text-slate-400">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M16 11V7a4 4 0 11-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
            <span class="text-[8px] font-black uppercase italic">Orders</span>
        </a>
        <a href="/cart" class="flex flex-col items-center gap-1 text-slate-400">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
            <span class="text-[8px] font-black uppercase italic">Cart</span>
        </a>
        <a href="/profile" class="flex flex-col items-center gap-1 text-slate-400">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path d="M16 7a4 4 0 11-8 0v4M12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            <span class="text-[8px] font-black uppercase italic">Profile</span>
        </a>
    </div>

    <script>
    function addToCart(id) {
        fetch('/add-to-cart', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId: id })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert('ðŸ”¥ Added to Luxe Cart!');
            } else {
                window.location.href = '/user-login';
            }
        })
        .catch(err => alert('Error adding to cart!'));
    }
    </script>
</body>
</html>

